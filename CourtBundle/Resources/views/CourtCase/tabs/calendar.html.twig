<link rel="stylesheet" href="{{ asset('bundles/adesignscalendar/css/fullcalendar/fullcalendar.css') }}"/>

<div class="row">
    <div class="col-md-10">
        {% include '@MakeNotification/Calendar/_box.html.twig' with {initialize: 0, callback: 'getEventsForOrder', editable: true, additionalData: {id: resource.order.id}, dropCallback: 'updateEventDateTimes', resizeCallback: 'updateEventDateTimes', clickCallback: 'handleEventClick'} %}
    </div>

    <div class="col-md-2">
        <div class="panel panel-default">
            <div class="panel-body">
                <h4>{{ 'lease.table.legend'|trans }}</h4>
            </div>
            <ul class="list-unstyled list-legend">
                {% for eventKind in eventKinds %}
                    {% set color = eventKind.color %}
                    {% if color == NULL %}{% set color = '#f5f5f5' %}{% endif %}
                    <li style="border-color:{{ color }};">{{ eventKind.name }}</li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-10">
        <div class="tab-content bordered">
            <div class="box-content">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>{{ 'name.lp'|trans }}</th>
                        <th>{{ 'make.ui.field.start_date'|trans }}</th>
                        <th>{{ 'make.event_kind.entity.name'|trans }}</th>
                        <th>{{ 'make.ui.field.name'|trans }}</th>
                        <th>{{ 'make.ui.field.description'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for event in events %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            <td>{{ event.startDate|date('d-m-Y H:i') }}</td>
                            <td style="background: {{ event.eventKind.color }}; color: {{ event.eventKind.textColor }}"> {{ event.eventKind }}</td>
                            <td>{{ event.name }}</td>
                            <td>{{ event.description }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>
